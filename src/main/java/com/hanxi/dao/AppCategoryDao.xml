<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanxi.dao.AppCategoryDao">

    <select id="getAppCategory" resultType="AppCategory">
        select * from appinfodb.app_category
        <where>
            <if test="pid == null">
                parentId  is null
            </if>
            <if test="pid != null">
                parentId = #{pid}
            </if>
        </where>
    </select>


</mapper>